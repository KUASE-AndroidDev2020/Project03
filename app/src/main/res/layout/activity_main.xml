<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/titleback"
        android:layout_width="405dp"
        android:layout_height="282dp"
        android:background="#F8D7E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text"
        android:layout_width="380dp"
        android:layout_height="68dp"
        android:text="Today's menu is ..."
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#807261"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="387dp"
        android:layout_height="336dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleback"
        app:layout_constraintVertical_bias="0.371">

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#46A9F8"
            android:fontFamily="@font/aclonica"
            android:text="Breakfast"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="160dp"
            android:fontFamily="monospace"
            android:text="or"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#F4A93B"
            android:fontFamily="@font/aclonica"
            android:onClick="goToHotOrColdActivity"
            android:text="Lunch"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:fontFamily="monospace"
            android:text="or"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#1EA195"
            android:fontFamily="@font/aclonica"
            android:onClick="goToHotOrColdActivity"
            android:text="Dinner"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            tools:ignore="OnClick" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="140dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>