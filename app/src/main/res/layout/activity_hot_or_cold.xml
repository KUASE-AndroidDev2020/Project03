<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F6C8"
    tools:context=".HotOrColdActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="379dp"
        android:layout_height="74dp"
        android:text="Which do you eat?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#F44CEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="57dp"
        android:layout_height="66dp"
        android:text="or"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <Button
        android:id="@+id/button1"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:background="#ED7070"
        android:onClick="goToHotFoodStyle"
        android:text="Hot"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button2"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:background="#5888F1"
        android:onClick="goToColdFoodStyle"
        android:text="Cold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.817"
        tools:ignore="OnClick" />
</androidx.constraintlayout.widget.ConstraintLayout>